@model ToDo.Models.Category

@{
    ViewBag.Title = "Edit Category";
}

<h2 class="PageTitle">Edit Category</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr/>
        <div class="LeftEditButton">
            <a class="buttonAdmin" href='@Url.Action("Delete/" + Model.Id)'>
                <img src="~/Content/images/delete.png" />
                delete category
            </a>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">

            <div class="col-md-10">
                @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Text, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <a class="buttonAdmin" href='@Url.Action("Categories")'>
        <img src="~/Content/images/back.png" />
        back to categories
    </a>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}